<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
>
    <property name="currentTable" value="brokerage_firm_server_token" global="false"/>
    <property name="currentTableComment" value="증권사 서버 접근 토큰" global="false"/>

    <property name="referenceTable" value="brokerage_firm_server_account" global="false"/>

    <changeSet author="newy" id="1">
        <preConditions onFail="CONTINUE">
            <tableExists tableName="${referenceTable}"/>
        </preConditions>

        <createTable tableName="${currentTable}" remarks="${currentTableComment}">
            <!-- PK, FK -->
            <column name="id" type="BIGINT" remarks="${currentTableComment} ID" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="${currentTable}_pk"/>
            </column>
            <column name="${referenceTable}_id" type="BIGINT" remarks="사용자 ID">
                <constraints
                        referencedTableName="${referenceTable}"
                        referencedColumnNames="id"
                        foreignKeyName="${currentTable}__${referenceTable}_id_fk"
                        deleteCascade="true"
                        nullable="false"
                />
            </column>

            <!-- 일반 필드 -->
            <column name="access_token" type="VARCHAR2(300)" remarks="접근 토큰">
                <constraints nullable="false"/>
            </column>
            <column name="expired_at" type="DATETIME" remarks="유효기간">
                <constraints nullable="false"/>
            </column>

            <!-- 생성/변경 일시 -->
            <column name="created_at" type="DATETIME" remarks="생성일시" defaultValueDate="now()">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME" remarks="변경일시" defaultValueDate="now()">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>